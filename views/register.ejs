<head>
    <title>Đăng ký</title>
    <link rel="stylesheet" type="text/css" href="vendor2/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="vendor2/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="vendor2/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="vendor2/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="vendor2/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="vendor2/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/register.css">
</head>
<%- include('header'); -%>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-85 p-b-20">
                <form method="POST" class="login100-form validate-form">
                    <span class="login100-form-title p-b-50">Chào mừng</span>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="wrap-input100 validate-input m-b-50">
                                <input class="input100" type="text" name="username" id="username">
                                <label class="focus-input100" for="username" data-placeholder="Tên đăng nhập"></label>
                            </div>
                            <div class="wrap-input100 validate-input m-b-50">
                                <input class="input100" type="password" name="password" id="password">
                                <label class="focus-input100" for="password" data-placeholder="Mật khẩu"></label>
                            </div>
                            <div class="wrap-input100 validate-input m-b-50">
                                <input class="input100" type="password" name="confirmpassword" id="confirmpassword">
                                <label class="focus-input100" for="confirmpassword" data-placeholder="Xác nhận mật khẩu"></label>
                            </div>
                            <!--Nút đăng ký-->
                            <div class="m-b-50">
                                <button class="login100-form-btn">Đăng ký</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="wrap-input100 validate-input m-b-50">
                                <input class="input100" type="text" name="displayName" id="displayName">
                                <label class="focus-input100" for="displayName" data-placeholder="Họ và tên"></label>
                            </div>
                            <!--Dòng giấy tờ tuỳ thân-->
                            <div class="row">
                                <div class="col-md-4">
                                    <select class="wrap-input100 validate-input m-b-50" name="identification" id="identification">
                                        <option selected disabled>Giấy tờ tùy thân</option>
                                        <option>CMND</option>
                                        <option>CCCD</option>
                                        <option>Hộ chiếu</option>
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    <div class="wrap-input100 validate-input m-b-50">
                                        <input class="input100" type="text" name="identificationnumber" id="identificationnumber">
                                        <label class="focus-input100" for="identificationnumber" data-placeholder="Số giấy tờ"></label>
                                    </div>
                                </div>
                            </div>
                            <!--Dòng email liên lạc-->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="wrap-input100 validate-input m-b-50">
                                        <input class="input100" type="DateRange" name="DateRange" id="DateRange">
                                        <label class="focus-input100" for="DateRange" data-placeholder="Ngày cấp"></label>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="wrap-input100 validate-input m-b-50">
                                        <input class="input100" type="email" name="email" id="email">
                                        <label class="focus-input100" for="email" data-placeholder="Email liên lạc"></label>
                                    </div>
                                </div>
                            </div>
                            <!--Dòng chọn file-->
                            <div class="m-b-50">
                                <input type="file" name="avatar" id="avatar">
                                <label for="avatar" for="avatar">Chọn ảnh giấy tờ tùy thân</label>
                            </div>
                        </div>
                    </div>
                    <ul class="login-more p-t-100">
                        <li>
                            <span class="txt1">Bạn đã có tài khoản?</span>
                            <a href="login" class="txt2">Đăng nhập</a>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
    <script src="vendor2/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor2/animsition/js/animsition.min.js"></script>
    <script src="vendor2/bootstrap/js/popper.js"></script>
    <script src="vendor2/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor2/select2/select2.min.js"></script>
    <script src="vendor2/daterangepicker/moment.min.js"></script>
    <script src="vendor2/daterangepicker/daterangepicker.js"></script>
    <script src="vendor2/countdowntime/countdowntime.js"></script>
    <script src="js/vendor2.js"></script>

    <%- include('footer'); -%>