<%- include('header'); -%>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-150 p-b-20">
                <form method="POST" class="login100-form validate-form">
                    <span class="login100-form-title p-b-30">Đổi mật khẩu</span>
                    <div class="wrap-input100 validate-input m-b-50">
                        <input class="input100" type="text" name="code" id="code">
                        <label class="focus-input100" for="code" data-placeholder="Mã xác nhận"></label>
                    </div>
                    <div class="wrap-input100 validate-input m-b-50">
                        <input class="input100" type="password" name="password">
                        <label class="focus-input100" for="password" data-placeholder="Mật khẩu mới"></label>
                    </div>
                    <div class="wrap-input100 validate-input m-b-50">
                        <input class="input100" type="password" name="confimpassword">
                        <label class="focus-input100" for="confimpassword" data-placeholder="Xác nhận mật khẩu"></label>
                    </div>
                    <div class="m-b-50">
                        <button class="login100-form-btn">Xác nhận</button>
                    </div>
                    <!--
                    <ul class="login-more p-t-190">
                        <li class="m-b-8">
                            <span class="txt1">Bạn chưa có tài khoản?</span>
                            <a href="register" class="txt2">Đăng ký</a>
                        </li>
                        <li>
                            <span class="txt1">Bạn đã có tài khoản?</span>
                            <a href="login" class="txt2">Đăng nhập</a>
                        </li>
                    </ul>
                    -->
                </form>
            </div>
        </div>
    </div>
    <script src="vendor2/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor2/animsition/js/animsition.min.js"></script>
    <script src="vendor2/bootstrap/js/popper.js"></script>
    <script src="vendor2/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor2/select2/select2.min.js"></script>
    <script src="vendor2/daterangepicker/moment.min.js"></script>
    <script src="vendor2/daterangepicker/daterangepicker.js"></script>
    <script src="vendor2/countdowntime/countdowntime.js"></script>
    <script src="js/vendor2.js"></script>
    <%- include('footer'); -%>